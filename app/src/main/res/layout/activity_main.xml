<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"

    >

    <RelativeLayout
        android:id="@+id/servicesmain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/BabyBlue"
        android:layout_margin="20dp"
       >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Services"
            android:textSize="30sp"
            android:fontFamily="@font/bangers"
            android:textColor="@color/DarkGray"
            android:padding="25dp"/>


        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expand All"
            android:fontFamily="@font/antic"
            android:background="#00000000"
            android:padding="20dp"
            android:textColor="@color/DarkGray"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/carsevices" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profilemain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/DarkGray"
        android:layout_margin="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30sp"
            android:fontFamily="@font/bangers"
            android:textColor="@color/BabyBlue"
            android:padding="25dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Expand All"
            android:fontFamily="@font/antic"
            android:background="#00000000"
            android:padding="20dp"
            android:textColor="@color/BabyBlue"
            android:layout_alignParentBottom="true"/>

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/profilefinal"
            android:layout_marginTop="0dp"
            android:layout_alignParentRight="true"
            android:scaleX="1.1"
            android:scaleY="1"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contactusmain"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/BabyBlue"
        android:layout_margin="20dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:padding="25dp"
            android:text="Contact Us"
            android:textColor="@color/DarkGray"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:fontFamily="@font/antic"
            android:padding="20dp"
            android:text="Expand All"
            android:textColor="@color/DarkGray" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/contactusss" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        >
        <Button
        android:id="@+id/signoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sign out"
        android:layout_marginTop="50dp"


        />
</LinearLayout>

</LinearLayout>

