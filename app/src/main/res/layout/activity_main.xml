<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".OurServices">


    <RelativeLayout
        android:id="@+id/servicesmain"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#E2EAED"
        app:layout_constraintBottom_toTopOf="@+id/profilemain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:padding="25dp"
            android:text="Our Services"
            android:textColor="#042C5A"
            android:textSize="30sp" />

        <Button

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:fontFamily="@font/antic"
            android:padding="20dp"
            android:text="Expand All"
            android:textColor="@color/DarkGray" />

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="0dp"
            android:layout_marginRight="4dp"
            android:scaleX="1.2"
            android:scaleY="1.2"
            android:src="@drawable/carsevices" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/profilemain"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_margin="20dp"
        android:layout_marginBottom="36dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#E2EAED"
        app:layout_constraintBottom_toTopOf="@+id/contactusmain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="38dp"
            android:layout_marginBottom="6dp"
            android:background="#00000000"
            android:fontFamily="@font/antic"
            android:padding="20dp"
            android:text="Expand All"
            android:textColor="@color/BabyBlue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="27dp"
            android:fontFamily="@font/bangers"
            android:padding="25dp"
            android:text="Profile"
            android:textColor="#042C5A"
            android:textSize="30sp" />

        <ImageView
            android:layout_width="115dp"
            android:layout_height="105dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="1dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#042C5A"
            android:scaleX="1.1"
            android:scaleY="1"
            android:src="@drawable/profilefinal" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/contactusmain"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        android:layout_margin="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/layout_bg"
        android:backgroundTint="#E2EAED"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.857">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bangers"
            android:padding="25dp"
            android:text="Contact Us"
            android:textColor="#042C5A"
            android:textSize="30sp" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="46dp"
            android:layout_alignParentBottom="true"
            android:background="#00000000"
            android:fontFamily="@font/antic"
            android:padding="20dp"
            android:text="Expand All"
            android:textColor="@color/DarkGray" />

        <ImageView
            android:layout_width="97dp"
            android:layout_height="109dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginRight="24dp"
            android:scaleX="0.8"
            android:scaleY="0.8"
            android:src="@drawable/call" />


    </RelativeLayout>

    <Button
        android:id="@+id/signoutButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/yellow"

        android:text="Sign out"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.913"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.158" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Triple-C"
        android:textColor="#042C5A"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/servicesmain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.067"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.232" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/WhiteSmoke"
        app:itemBackground="@color/WhiteSmoke"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/menu_navigation" >
    </com.google.android.material.bottomnavigation.BottomNavigationView>

</androidx.constraintlayout.widget.ConstraintLayout>